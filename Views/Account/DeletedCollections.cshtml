@model IEnumerable<CanamDistributors.Entity.CategoryEntity>

@{
    ViewData["Title"] = "Deleted Collections";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}



<h1 class="page-header">Deleted Collections</h1>
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @successMessage
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @errorMessage
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Deleted Collections
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Category</th>
                                <th>Products</th>
                                <th>Product Conditions</th>
                                <th>Created ON</th>
                                <th>Updated ON</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var category in Model)
                                {
                                    // Check if the category has valid data
                                    if (!string.IsNullOrEmpty(category.Category) ||
                                    !string.IsNullOrEmpty(Convert.ToString(category.Products)) ||
                                    !string.IsNullOrEmpty(category.ProoductConditions) ||
                                    category.DtCreated != DateTime.MinValue ||
                                    category.DtUpdated != DateTime.MinValue)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(category.CategoryImg))
                                                {
                                                    var base64Images = category.CategoryImg.Split('|');
                                                    foreach (var base64Image in base64Images)
                                                    {
                                                        if (!string.IsNullOrEmpty(base64Image))
                                                        {
                                                            <img src="data:image/png;base64,@base64Image" alt="Category Image" style="width:100px;height:50px;margin-right: 5px;" />
                                                        }
                                                    }
                                                }
                                                else
                                                {
                                                    <span>No Image</span>
                                                }
                                            </td>
                                            <td>@category.Category</td>
                                            <td>@category.Products</td>
                                            <td>@Html.Raw(@category.ProoductConditions)</td>
                                            <td>@category.DtCreated.ToString("MM-dd-yyyy HH:mm:ss")</td>
                                            <td>@category.DtUpdated.ToString("MM-dd-yyyy HH:mm:ss")</td>
                                            <td>
                                                <a asp-action="ResetCollection" asp-controller="Account" asp-route-categoryId="@category.CategoryId">Reset</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center">No deleted collections found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
