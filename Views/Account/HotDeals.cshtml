@model IEnumerable<CanamDistributors.Entity.Products>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-header">Products</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a type="button" class="btn btn-primary" asp-controller="Account" asp-action="ExportProducts">Export Products</a>
                <a type="button" class="btn btn-primary" asp-controller="Account" asp-action="PrintPreview">Print Products</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover productTable" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Name</th>
                                <th>SKU</th>
                                <th>Type</th>
                                <th>Sales Description</th>
                                <th>Sales Price</th>
                                <th>Cost</th>
                                <th>Qty On Hand</th>
                                <th>ReOrder Point</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr> 

                                    <td>@category.ParentRefName</td>
                                    <td>@category.Name</td>
                                    <td>@category.Name</td>
                                    <td>@category.Type</td>
                                    <td>@category.Description</td>
                                    <td>@category.UnitPrice</td>
                                    <td>@category.PurchaseCost</td>
                                    <td>@category.QtyOnHand</td>
                                    <td>@category.ReorderPoint</td>
                                    <td>
                                        <label class="switch">
                                            <input type="checkbox" id="toggleStatus" @(category.Active == "true" ? "checked" : "") onclick="toggleStatus(this)" />
                                            <span class="slider round"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <a href="" class="btn-default">
                                            Edit

                                        </a>
                                    </td>
                                </tr>
                            }
                            .
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
