@model CanamDistributors.Entity.Products
@{
    ViewData["Title"] = "Add Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-header">Add Product</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Product
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("SaveProduct", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <div class="form-group">
                            <label for="Category">Title</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="e.g Summer Collection, Under $100, Staff picks" autofocus="true" />
                        </div>
                        <div class="form-group">
                            <label for="Category">SKU</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="e.g Summer Collection, Under $100, Staff picks" autofocus="true" />
                        </div>
                       @*  <div class="form-group">  c  
                            <label for="filepond">Image</label>
                            <form id="uploadForm">
                                <input type="file" asp-for="CategoryImage" name="CategoryImage" id="CategoryImage" />
                            </form>
                            <div id="responseMessage"></div>
                        </div>
                        <div class="form-group">
                            <label for="ProductList">Products</label>
                            <select class="form-control" asp-for="ProductId">
                                @foreach (var item in @ViewBag.CategoryList)
                                {
                                    <option value="@item.CategoryId">@item.Category</option>
                                }
                            </select>
                        </div> *@
                        <button class="btn btn-lg btn-success btn-block" type="submit">Submit</button>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>


