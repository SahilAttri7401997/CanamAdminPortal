@model IEnumerable<CanamDistributors.Models.ProductResponseModel>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-header">Products</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a type="button" class="btn btn-primary" asp-controller="Account" asp-action="ExportProducts">Export Products</a>
                <a type="button" class="btn btn-primary" asp-controller="Account" asp-action="PrintPreview">Print Products</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover productTable" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Images</th>
                                <th>Category</th>
                                <th>Name</th>
                                <th>SKU</th>
                                <th>Type</th>
                                <th>Sales Description</th>
                                <th>Sales Price</th>
                                <th>Cost</th>
                                <th>Qty On Hand</th>
                                <th>ReOrder Point</th>
                                <th>Created ON</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(category.Images))
                                        {
                                            // Split the concatenated Base64 string
                                            var base64Images = category.Images.Split('|');

                                            foreach (var base64Image in base64Images)
                                            {
                                                if (!string.IsNullOrEmpty(base64Image))
                                                {
                                                    <img src="data:image/png;base64,@base64Image" alt="Category Image" style="width:100px;height:50px;margin-right: 5px;" />
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <span>No Image</span>
                                        }
                                    </td>
                                    <td>@category.ParentRefName</td>
                                    <td>@category.Name</td>
                                    <td>@category.Name</td>
                                    <td>@category.Type</td> 
                                    <td>@Html.Raw(category.Description)</td>
                                    <td>@category.UnitPrice</td>
                                    <td>@category.PurchaseCost</td>
                                    <td style="background-color: red;">@category.QtyOnHand</td>
                                    <td>@category.ReorderPoint</td>
                                    <td>@category.CreationDate</td>
                                    <td>
                                        <label class="switch">
                                            <input type="checkbox" id="toggleStatus_@category.Id" onchange="handleCheckboxChange(this, '@category.Id',@category.DiscountPrice,'@Html.Raw(category.Images)','@Html.Raw(category.Description)','true')"
                                            @(category.Active == "true" ? "checked" : "") />
                                            <span class="slider round"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <a type="button" class="btn btn-primary" onclick="EditHotDealProduct('@category.Id',@category.DiscountPrice,'@Html.Raw(category.Images)','@Html.Raw(category.Description)','true')">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
