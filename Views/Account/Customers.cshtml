@model IEnumerable<CanamDistributors.Models.CustomerResponseModel>

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-header">Customers</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a type="button" class="btn btn-primary" asp-controller="Account" asp-action="ExportCustomers">Export Customers</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Legal Name</th>
                                <th>Trade Name</th>
                                <th>Business Status</th>
                                <th>Business Type</th>
                                <th>Phone Number</th>
                                <th>Federal Tax Id</th>
                                <th>PST Number</th>
                                <th>PST Certificate</th>
                                <th>Billing Address</th>
                                <th>Billing Address 2</th>
                                <th>Billing City</th>
                                <th>Billing Province</th>
                                <th>Billing Country</th>
                                <th>Billing Postal Code</th>
                                <th>Shipping Address</th>
                                <th>Shipping Address 2</th>
                                <th>Shipping City</th>
                                <th>Shipping Province</th>
                                <th>Shipping Country</th>
                                <th>Shipping Postal Code</th>
                                <th>Bank Name</th>
                                <th>Bank Contact Name</th>
                                <th>Bank Address</th>
                                <th>Bank Phone Number</th>
                                <th>Bank Transist Number</th>
                                <th>Bank Inst Number</th>
                                <th>Bank Account Number</th>
                                <th>CC First Name</th>
                                <th>CC Last Name</th>
                                <th>CC Number</th>
                                <th>CC Expiry Month</th>
                                <th>CC Expiry Year</th>
                                <th>CVV</th>
                                <th>Supplier Name 1</th>
                                <th>Supplier City 1</th>
                                <th>Supplier Phone Number 1</th>
                                <th>Supplier Name 2</th>
                                <th>Supplier City 2</th>
                                <th>Supplier Phone Number 2</th>
                                <th>Supplier Name 3</th>
                                <th>Supplier City 3</th>
                                <th>Supplier Phone Number 3</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Title</th>
                                <th>Mobile Phone</th>
                                <th>Email</th>
                                <th>Fax</th>
                                <th>2-Factor Mobile Number</th>
                                <th>Password</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cutomer in Model)
                            {
                                <tr>
                                    <td>@cutomer.LegalName</td>
                                    <td>@cutomer.TradeName</td>
                                    <td>@cutomer.BusinessStatus</td>
                                    <td>@cutomer.BusinessType</td>
                                    <td>@cutomer.PhoneNumber</td>
                                    <td>@cutomer.TaxID</td>
                                    <td>@cutomer.PSTNumber</td>
                                    <td>@cutomer.PSTCertificate</td>
                                    <td>@cutomer.BillingAddress</td>
                                    <td>@cutomer.BillingAddress2</td>
                                    <td>@cutomer.BillingCity</td>
                                    <td>@cutomer.BillingCountry</td>
                                    <td>@cutomer.BillingState</td>
                                    <td>@cutomer.BillingZip</td>
                                    <td>@cutomer.ShippingAddress</td>
                                    <td>@cutomer.ShippingAddress2</td>
                                    <td>@cutomer.ShippingCity</td>
                                    <td>@cutomer.ShippingCountry</td>
                                    <td>@cutomer.ShippingState</td>
                                    <td>@cutomer.ShippingZipcode</td>
                                    <td>@cutomer.BankName</td>
                                    <td>@cutomer.BankContactName</td>
                                    <td>@cutomer.BankAddress</td>
                                    <td>@cutomer.BankPhoneNumber</td>
                                    <td>@cutomer.TransitNo</td>
                                    <td>@cutomer.InstNo</td>
                                    <td>@cutomer.AccountNo</td>
                                    <td>@cutomer.CCFirstName</td>
                                    <td>@cutomer.CCLastName</td>
                                    <td>@cutomer.CCNumber</td>
                                    <td>@cutomer.CCExpiryMonth</td>
                                    <td>@cutomer.CCExpiryYear</td>
                                    <td>@cutomer.CVV</td>
                                    <td>@cutomer.SupplierName1</td>
                                    <td>@cutomer.SupplierCity1</td>
                                    <td>@cutomer.SupplierPhone1</td>
                                    <td>@cutomer.SupplierName2</td>
                                    <td>@cutomer.SupplierCity2</td>
                                    <td>@cutomer.SupplierPhone2</td>
                                    <td>@cutomer.SupplierName3</td>
                                    <td>@cutomer.SupplierCity3</td>
                                    <td>@cutomer.SupplierPhone3</td>
                                    <td>@cutomer.FirstName</td>
                                    <td>@cutomer.LastName</td>
                                    <td>@cutomer.Title</td>
                                    <td>@cutomer.MobilePhone</td>
                                    <td>@cutomer.EmailAddress</td>
                                    <td>@cutomer.Fax</td>
                                    <td>@cutomer.MobileNumber</td>
                                    <td>@cutomer.Password</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
