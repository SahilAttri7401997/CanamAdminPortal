    <script>
        $(document).ready(function () {
            new FroalaEditor('#ProoductConditions');
            $('#dataTables-example').DataTable({
                responsive: true
            });
            document.getElementById('uploadForm').addEventListener('submit', function (event) {
                event.preventDefault();

                var fileInput = document.getElementById('CategoryImage');
                var file = fileInput.files[0];
                if (!file) {
                    alert('Please select a file.');
                    return;
                }

                var formData = new FormData();
                formData.append('file', file);

                fetch('/Account/upload', {
                    method: 'POST',
                    body: formData
                })
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('responseMessage').innerText = 'File uploaded successfully! File path: ' + data.filePath;
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        document.getElementById('responseMessage').innerText = 'Failed to upload file.';
                    });
            });
        });


      

    </script>


